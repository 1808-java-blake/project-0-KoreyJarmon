package com.revature.screens;

import java.util.Scanner;

import com.revature.daos.User;
import com.revature.daos.UserDao;

public class HomeScreen implements Screen {
	private Scanner scan = new Scanner(System.in);
	private UserDao ud = UserDao.currentUserDao;

	public Screen start() {
		System.out.println("Enter pin in otder to access bank features: ");
		int pin = scan.nextInt();
		while(pin/1000 > 10) {
			System.out.println("Invalid input. Pin should not exceed 4 numbers. Try again: ");
			pin = scan.nextInt();
		User currentUser = ud.findPin(pin);
		System.out.println("Please chose from following options:");
		System.out.println("Enter 1 to view balance");
		System.out.println("Enter 2 to deposit money");
		System.out.println("Enter 3 to withdraw money");
		System.out.println("Enter 4 to view transaction history");
		String selection = scan.nextLine();
		switch (selection) {
		case "1":
			System.out.println("Your balance is: " + currentUser.getBalance());
			break;
		case "2":
			System.out.println("Enter the amount you wish to deposit:");
			currentUser.deposit(scan.nextInt());
			break;
		case "3":
			System.out.println("Enter the amount you wish to withdraw:");
			currentUser.withdraw(scan.nextInt());
			break;
		case "4":
			System.out.println("Transactio history: ");
			break;
		default:
			break;
		}

		return this;
	}

}
